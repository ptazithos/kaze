{
  "compilerOptions": {
    "lib": [
      "ES2022",
      "DOM"
    ],
    "module": "ESNext",
    "noEmit": true,
    "strict": true,
    "skipLibCheck": true,
    "isolatedModules": true,
    "resolveJsonModule": true,
    "moduleResolution": "bundler",
    "useDefineForClassFields": true,
    "allowImportingTsExtensions": true,
    "types": [
      "@webgpu/types"
    ],
    "paths": {
      "@/*": [
        "./src/*"
      ],
      "@types": [
        "./src/types"
      ],
    }
  },
  "include": [
    "src"
  ]
}